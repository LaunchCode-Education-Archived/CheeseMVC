@model IList<CheeseMVC.Models.Cheese>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
            <td>@cheese.Category.Name</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}
